wm-name = topbar

modules-left = xwindow
modules-center = date
modules-right = vpn wireless-network battery 

[module/date]
type = custom/script
exec = echo "$(date +'%A %d/%m - %I:%M')"
interval = 1
 
[module/xwindow]
type = internal/xwindow
label =  %{T1}%title:0:60:...%

[module/battery]
